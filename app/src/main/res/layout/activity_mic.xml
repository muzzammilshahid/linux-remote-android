<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MicActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_mute_status"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/mute" />

    <com.ornach.nobobutton.NoboButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:nb_text="@string/mute"
        android:layout_below="@+id/iv_mute_status"
        android:id="@+id/mutebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:nb_borderColor="#96cfe0"
        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="#3a779b"
        app:nb_focusColor="#113355"
        app:nb_textColor="#FFF"
        app:nb_textSize="15sp"
        app:nb_textStyle="bold"
        app:nb_radius="5dp"/>

    <com.ornach.nobobutton.NoboButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:nb_text="Unmute"
        android:layout_below="@+id/mutebtn"
        android:id="@+id/unmute_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:nb_borderColor="#96cfe0"
        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="#3a779b"
        app:nb_focusColor="#113355"
        app:nb_textColor="#FFF"
        app:nb_textSize="15sp"
        app:nb_textStyle="bold"
        app:nb_radius="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/pb"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mic_down"/>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mic_up"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>