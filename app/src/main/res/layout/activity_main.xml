<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fcfd"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.ornach.nobobutton.NoboButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:nb_text="Sound Control"
            android:id="@+id/sound_btn"
            android:layout_centerHorizontal="true"
            app:nb_borderColor="#96cfe0"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#3a779b"
            app:nb_focusColor="#113355"
            app:nb_textColor="#FFF"
            app:nb_textSize="15sp"
            app:nb_textStyle="bold"
            app:nb_radius="5dp"/>

        <com.ornach.nobobutton.NoboButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:nb_text="Mic Control"
            android:id="@+id/mic_btn"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sound_btn"
            app:nb_borderColor="#96cfe0"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#3a779b"
            app:nb_focusColor="#113355"
            app:nb_textColor="#FFF"
            app:nb_textSize="15sp"
            app:nb_textStyle="bold"
            app:nb_radius="5dp"/>

        <com.ornach.nobobutton.NoboButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_showscreen"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/mic_btn"
            android:layout_centerHorizontal="true"
            app:nb_text="Show Screen"
            app:nb_borderColor="#96cfe0"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#3a779b"
            app:nb_focusColor="#113355"
            app:nb_textColor="#FFF"
            app:nb_textSize="15sp"
            app:nb_textStyle="bold"
            app:nb_radius="5dp"/>
    </RelativeLayout>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_above="@id/lock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"/>

    <com.ornach.nobobutton.NoboButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/lock"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:nb_text="Lock Screen"
        app:nb_borderColor="#96cfe0"
        app:nb_borderWidth="2dp"
        app:nb_backgroundColor="#3a779b"
        app:nb_focusColor="#113355"
        app:nb_textColor="#FFF"
        app:nb_textSize="15sp"
        app:nb_textStyle="bold"
        app:nb_radius="5dp"/>

</RelativeLayout>